{
   "compilerOptions": {
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es5",
        "es6",
        "es7"
      ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "src/**/*.ts"
    ]
}